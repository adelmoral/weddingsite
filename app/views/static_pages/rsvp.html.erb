<% provide(:title, "RSVP") %>

<head>
<meta name="robots" content="noindex" />
</head>


<h1>RSVP</h1>
<p>
Please enter the RSVP Code provided in your invitation. Email <b>rsvp@mattandaurea.com</b> for any questions.
</p>
<%= form_tag parties_search_path, method: :get do %>
  <%= label_tag :rsvp_code, "RSVP Code: " %>
  <%= text_field_tag :rsvp_code, nil %>
  <%= submit_tag "Go", :name => nil %>

<p><b><%= flash[:error] %></b></p>

<% end %>
